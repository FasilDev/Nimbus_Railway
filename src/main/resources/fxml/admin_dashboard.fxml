<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.nimbus_railway.controllers.AdminController"
            prefHeight="600.0" prefWidth="800.0">
    <top>
        <VBox>
            <HBox alignment="CENTER_LEFT" style="-fx-background-color: #3F51B5; -fx-padding: 10px;">
                <Label text="Nimbus Railway - Administration" textFill="WHITE" style="-fx-font-size: 24px; -fx-font-weight: bold;">
                    <HBox.margin>
                        <Insets left="20.0"/>
                    </HBox.margin>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="lblUserInfo" textFill="WHITE" style="-fx-font-size: 14px;">
                    <HBox.margin>
                        <Insets right="20.0"/>
                    </HBox.margin>
                </Label>
            </HBox>

            <ToolBar style="-fx-background-color: #7986CB;">
                <Button fx:id="btnDeconnexion" text="Déconnexion" onAction="#handleDeconnexion"
                        style="-fx-background-color: #FF5252; -fx-text-fill: white;"/>
            </ToolBar>
        </VBox>
    </top>

    <center>
        <GridPane alignment="CENTER" hgap="20" vgap="20">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <Button fx:id="btnGestionTrains" text="Gestion des Trains" onAction="#handleGestionTrains"
                    prefWidth="200" prefHeight="100" style="-fx-font-size: 16px; -fx-background-color: #4CAF50; -fx-text-fill: white;"
                    GridPane.columnIndex="0" GridPane.rowIndex="0"/>

            <Button fx:id="btnGestionEleves" text="Gestion des Élèves" onAction="#handleGestionEleves"
                    prefWidth="200" prefHeight="100" style="-fx-font-size: 16px; -fx-background-color: #2196F3; -fx-text-fill: white;"
                    GridPane.columnIndex="1" GridPane.rowIndex="0"/>

            <Button fx:id="btnGestionTrajets" text="Gestion des Trajets" onAction="#handleGestionTrajets"
                    prefWidth="200" prefHeight="100" style="-fx-font-size: 16px; -fx-background-color: #FF9800; -fx-text-fill: white;"
                    GridPane.columnIndex="0" GridPane.rowIndex="1"/>

            <Button fx:id="btnGestionUtilisateurs" text="Gestion des Utilisateurs" onAction="#handleGestionUtilisateurs"
                    prefWidth="200" prefHeight="100" style="-fx-font-size: 16px; -fx-background-color: #9C27B0; -fx-text-fill: white;"
                    GridPane.columnIndex="1" GridPane.rowIndex="1"/>
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #C5CAE9; -fx-padding: 10px;">
            <Label text="© 2025 Nimbus Railway - Tous droits réservés" />
        </HBox>
    </bottom>
</BorderPane>