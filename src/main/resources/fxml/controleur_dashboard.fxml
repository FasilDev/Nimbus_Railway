<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.nimbus_railway.controllers.ControleurController"
            prefHeight="600.0" prefWidth="800.0">
    <top>
        <VBox>
            <HBox alignment="CENTER_LEFT" style="-fx-background-color: #FF9800; -fx-padding: 10px;">
                <Label text="Nimbus Railway - Contrôleur" textFill="WHITE" style="-fx-font-size: 24px; -fx-font-weight: bold;">
                    <HBox.margin>
                        <Insets left="20.0"/>
                    </HBox.margin>
                </Label>
                <Region HBox.hgrow="ALWAYS"/>
                <Label fx:id="lblUserInfo" textFill="WHITE" style="-fx-font-size: 14px;">
                    <HBox.margin>
                        <Insets right="20.0"/>
                    </HBox.margin>
                </Label>
            </HBox>

            <ToolBar style="-fx-background-color: #FFB74D;">
                <Button fx:id="btnDeconnexion" text="Déconnexion" onAction="#handleDeconnexion"
                        style="-fx-background-color: #FF5252; -fx-text-fill: white;"/>
            </ToolBar>
        </VBox>
    </top>

    <center>
        <GridPane alignment="CENTER" hgap="20" vgap="20">
            <padding>
                <Insets top="30" right="30" bottom="30" left="30"/>
            </padding>

            <Button fx:id="btnConsulterTrajets" text="Consulter les Trajets" onAction="#handleConsulterTrajets"
                    prefWidth="250" prefHeight="120" style="-fx-font-size: 18px; -fx-background-color: #4CAF50; -fx-text-fill: white;"
                    GridPane.columnIndex="0" GridPane.rowIndex="0"/>

            <Button fx:id="btnVerifierEleves" text="Vérifier les Élèves" onAction="#handleVerifierEleves"
                    prefWidth="250" prefHeight="120" style="-fx-font-size: 18px; -fx-background-color: #2196F3; -fx-text-fill: white;"
                    GridPane.columnIndex="1" GridPane.rowIndex="0"/>
        </GridPane>
    </center>

    <bottom>
        <HBox alignment="CENTER" style="-fx-background-color: #FFE0B2; -fx-padding: 10px;">
            <Label text="© 2025 Nimbus Railway - Tous droits réservés" />
        </HBox>
    </bottom>
</BorderPane>